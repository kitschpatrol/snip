{
	"name": "@kitschpatrol/snip",
	"version": "0.0.2",
	"type": "module",
	"description": "A CLI tool for snippet management.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/snip.git"
	},
	"homepage": "https://github.com/kitschpatrol/snip",
	"bugs": {
		"url": "https://github.com/kitschpatrol/snip/issues",
		"email": "eric@ericmika.com"
	},
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"contributors": [
		{
			"name": "Original Author: Jared Hanstra",
			"url": "https://github.com/jhanstra"
		}
	],
	"license": "MIT",
	"packageManager": "pnpm@9.9.0",
	"engines": {
		"node": "^18.17.0 || >=20.5.0",
		"pnpm": ">=9.0.0"
	},
	"bin": {
		"snip": "./dist/cli.js"
	},
	"files": [
		"dist/*"
	],
	"keywords": [
		"cli",
		"snippets",
		"vscode",
		"npm-package"
	],
	"scripts": {
		"build": "pkgroll --clean-dist --minify",
		"clean": "rimraf ./pnpm-lock.yaml ; git clean -fdX",
		"fix": "pnpm shared-config --fix",
		"lint": "pnpm shared-config --lint",
		"prebuild": "jq '{command: .bin | keys[], version, description}' package.json > ./src/generated/package-info.json",
		"release": "pnpm run build && pnpm bumpp --commit 'Release: %s' && pnpm publish --otp $(op read 'op://Personal/Npmjs/one-time password?attribute=otp')",
		"start": "node ./dist/cli.js",
		"test": "vitest",
		"update-language-data": "tsx ./scripts/update-vscode-language-data.ts"
	},
	"dependencies": {
		"@commander-js/extra-typings": "^12.1.0",
		"@types/fs-extra": "^11.0.4",
		"@types/ignore-walk": "^4.0.3",
		"@types/inquirer": "^9.0.7",
		"commander": "^12.1.0",
		"execa": "^9.3.1",
		"fs-extra": "^11.2.0",
		"ignore-walk": "^7.0.0",
		"inquirer": "^10.2.2"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^4.7.5",
		"@types/node": "^20.16.5",
		"bumpp": "^9.5.2",
		"chalk": "^5.3.0",
		"date-fns": "^3.6.0",
		"node-jq": "^6.0.1",
		"pkgroll": "^2.4.2",
		"rimraf": "^6.0.1",
		"tslog": "^4.9.3",
		"tsx": "^4.19.0",
		"typescript": "^5.5.4",
		"untildify": "^5.0.0",
		"vitest": "^2.0.5",
		"zod": "^3.23.8"
	},
	"publishConfig": {
		"access": "public"
	}
}
